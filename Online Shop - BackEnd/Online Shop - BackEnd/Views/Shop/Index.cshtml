@model ShopVM

@section Links{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous" />
    <link rel="stylesheet" href="~/assets/css/shop/shop.css" />
    <title>Shop</title>
}

<main>
    @foreach (var banner in Model.Banners)
    {
        if (banner.Id == 3)
        {
            <section id="shop-bg"
             style="background-image: url(./assets/images/shop/@banner.Image)">
                <h2>@banner.Title</h2>
            </section>
        }
    }

    <section id="shop-product">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="filter-product">
                        <h2>Filters</h2>
                        <form class="search">
                            <input type="search" placeholder="Search" />
                        </form>
                        <h5>Price</h5>
                        <div class="input-price">
                            <div class="input-area">
                                <span>Min</span>
                                <input type="number" class="input-min" value="5" />
                            </div>
                            <div class="separator">-</div>
                            <div class="input-area">
                                <span>Max</span>
                                <input type="number"
                                       class="input-max"
                                       max="631"
                                       value="631" />
                            </div>
                        </div>
                        <div class="range">
                            <div class="progress"></div>
                        </div>
                        <div class="range-input">
                            <input type="range"
                                   class="range-min"
                                   min="0"
                                   max="631"
                                   value="5"
                                   step="10" />
                            <input type="range"
                                   class="range-max"
                                   min="0"
                                   max="631"
                                   value="631"
                                   step="10" />
                        </div>
                        <div class="size">
                            <h5>Size</h5>
                            @foreach (var size in Model.SubCategories)
                            {
                                if (size.CategoryId == 1)
                                {
                                    <input type="checkbox" id="_checkbox-1" />
                                    <label for="_checkbox-1">
                                        <p>@size.Name</p>
                                        <div class="tick-mark"></div>
                                    </label>

                                    <br />
                                }
                            }
                        </div>

                        <div class="brand">
                            <h5>Brand</h5>
                            @foreach (var brand in Model.SubCategories)
                            {
                                if (brand.CategoryId == 2)
                                {
                                    <input type="checkbox" id="_checkbox-8" />
                                    <label for="_checkbox-8">
                                        <p>@brand.Name</p>
                                        <div class="tick-mark"></div>
                                    </label>

                                    <br />
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="col-9">
                    <section id="products">
                        <div class="container">
                            <div class="row pt-5">
                                <div class="col-12"
                                     style="
                        display: flex !important;
                        justify-content: center !important;
                      ">
                                    <ul class="category-mobile d-md-none list-unstyled">
                                        <li>
                                            <a href="" class="categories mr-2">Categories</a>
                                            <i class="fas fa-caret-down"></i>
                                            <ul class="category list-unstyled"
                                                style="display: none">
                                                <li><a href="" data-id="All">All</a></li>
                                                @foreach (var category in Model.SubCategories)
                                                {
                                                    if (category.CategoryId == 5)
                                                    {
                                                        <li><a href="" data-id="@category.Id">@category.Name</a></li>
                                                    }
                                                }
                                            </ul>
                                        </li>
                                    </ul>

                                    <ul class="category d-none d-md-flex list-unstyled">
                                        <li><a href="" data-id="All">All</a></li>
                                        @foreach (var category in Model.SubCategories)
                                        {
                                            if (category.CategoryId == 5)
                                            {
                                                <li><a href="" data-id="@category.Id">@category.Name</a></li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                            <div class="row">
                                @foreach (var product in Model.Products)
                                {
                                    <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
                                        <div class="product-item text-center"
                                         data-id="@product.ProductSubCategories.FirstOrDefault(m => m.SubCategory.CategoryId == 5)?.SubCategoryId"
                                         product-id="@product.Id">
                                            <div class="img">
                                                <a asp-controller="ProductDetail" asp-action="Index" asp-route-id="@product.Id">
                                                    <img src="./assets/images/home/products/@product.ProductImages.FirstOrDefault(m => m.IsMain)?.Name"
                                                     class="img-fluid"
                                                     alt="" />
                                                    <img src="./assets/images/home/products/@product.ProductImages.FirstOrDefault(m => !m.IsMain)?.Name"
                                                     class="img-fluid"
                                                     alt="" />
                                                </a>
                                                <div class="links">
                                                    <div class="heart">
                                                        <i class="fa-solid fa-heart"></i>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="title mt-3" style="color: grey;">
                                                @foreach (var category in product.ProductSubCategories)
                                                {
                                                    @if (category.SubCategory.CategoryId == 2)
                                                    {
                                                        <h6>@category.SubCategory.Name</h6>
                                                    }
                                                }
                                            </div>
                                            <div class="title mt-3">
                                                <h6>@product.Name</h6>
                                            </div>
                                            <div class="price">
                                                <button>Add To Cart</button>
                                                <span class="text-black-50">$@product.Price.ToString("N2")</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </section>
                    <div class="show-more">
                        <button class="button hover-btn"><span>Show more</span></button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts{
    <script>
        $(".btn").on("click", function () {
            $(".input").toggleClass("inclicked");
            $(".btn").toggleClass("close");
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"
        crossorigin="anonymous"
        referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/b39b112ecb.js"
        crossorigin="anonymous"></script>
    <script src="~/assets/js/shop.js"></script>
}