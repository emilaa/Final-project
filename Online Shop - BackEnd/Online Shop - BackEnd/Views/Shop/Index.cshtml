                        <div class="post-filter container">
                            @foreach (var subCategory in @Model.SubCategories)
                            {
                                if (subCategory.Name == "All")
                                {
                                    <span class="filter-item active-filter" data-filter="@subCategory.Name.ToLower()">@subCategory.Name</span>

