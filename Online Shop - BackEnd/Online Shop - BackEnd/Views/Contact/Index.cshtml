@model ContactVM

@section Links{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous" />
    <link rel="stylesheet" href="./assets/css/contact/contact.css" />
    <title>Contact Us</title>
}

<main>
    <section id="contact-us">
        <div class="row">
            <div class="col-12">
                <div class="contact-us">
                    <img class="img-1" src="./assets/images/contact/@Model.Contact.Image" alt="" />
                    <div class="contact-box">
                        <div class="left"><img src="./assets/images/contact/@Model.Contact.Image" alt=""></div>
                        <div class="right">
                            <h2>Contact Us</h2>
                            <input type="text" class="field" placeholder="Your Name" />
                            <input type="text" class="field" placeholder="Your Email" />
                            <input type="text" class="field" placeholder="Phone" />
                            <textarea placeholder="Message" class="field"></textarea>
                            <button class="btn">Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts{
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/b39b112ecb.js"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="./assets/js/contact.js"></script>
}