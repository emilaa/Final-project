@model Blog

@section Links{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous" />
    <link rel="stylesheet" href="~/assets/css/blog-detail/blog-detail.css" />
    <title>Blog detail</title>
}

<main>
    <section id="blog-detail">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <div class="header-content post-container">
                        <img class="image" src="~/assets/images/blog/@Model.BlogImages.FirstOrDefault()?.Name" alt="" />
                    </div>
                    <form>
                        <div class="user-comment mt-3">
                            <div class="user">
                                <div class="bg-light p-2">
                                    <div class="d-flex flex-row align-items-start">
                                        <img class="rounded-circle" src="~/assets/images/shop/Elon_Musk_Royal_Society_(crop2).jpg" alt="">
                                        <textarea class="form-control ml-1 shadow-none textarea"></textarea>
                                    </div>
                                    <div class="mt-2 text-right">
                                        <button class="btn btn-success btn-sm shadow-none" type="button">Post comment</button>
                                        <button class="btn btn-outline-danger btn-sm ml-1 shadow-none" type="button">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-6">
                    <div class="post-content post-container">
                        <h2 class="sub-heading">@Model.Title</h2>
                        <p class="post-text">
                            @Model.Description
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts{
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/b39b112ecb.js"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/assets/js/blog-detail.js"></script>
}