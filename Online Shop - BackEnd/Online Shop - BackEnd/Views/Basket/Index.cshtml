@model List<BasketDetailVM>

@{
    ViewData["Title"] = "Index";

    decimal endTotal = 0;

    List<SubCategory> sizes = (List<SubCategory>)ViewBag.sizes;
}

@section Links{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous" />
    <link rel="stylesheet" href="~/assets/css/favorite/favorite.css" />
    <title>Favorite product</title>
 }

<div class="container" style="padding-top: 50px;">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Brand</th>
                <th scope="col">Category</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        <a asp-controller="ProductDetail" asp-action="Index" asp-route-id="@item.Id">
                            <img style="width:100px;height:100px" src="~/assets/images/home/products/@item.Image" alt="product image" />
                        </a>
                    </th>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("N2") $</td>
                    <td>@item.Brand</td>
                    <td>@item.Category</td>
                    <td>@item.Count</td>
                    <td>@item.Total.ToString("N2") $</td>
                </tr>
                endTotal += item.Total;
            }
        </tbody>
    </table>
    <div style="width: 100%; display:flex; justify-content: end;">
        <h2>Total price: @endTotal.ToString("N2") $</h2>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.4.30/sweetalert2.all.min.js"></script>
    <script src="https://kit.fontawesome.com/b39b112ecb.js"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"
        crossorigin="anonymous"></script>
    <script src="~/assets/js/favorite.js"></script>
 }
